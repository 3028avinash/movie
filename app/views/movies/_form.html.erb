
<%= form_with(model: movie) do |form| %>
  
<div class="d-flex flex-column justify-content-center justify-items-center m-3 p-2">

  <div class='field d-flex flex-column m-2'>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>


  <div>
    <%= form.label :image%>
    <%= form.file_field :image%>
  </div>

</div>
  <div class="btn btn-success m-2">
    <%= form.submit %>
  </div>
<% end %>
</div>