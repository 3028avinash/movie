<p style="color: green"><%= notice %></p>


Review : <%= @review.review%>
<br>
Rate : <%= @review.rate%>
<br>
<% if @review.review.nil?%>
Reviews By : <%= link_to @review.user.name, user_path%> <br>
<% end %>

<% if @review.movie.present? %>
  Movie : <%= link_to @review.movie.name, movie_path(@review.movie)%>
<% else %>
  <%= "Movie Not Present"%>
<% end%>


<div>
<% if current_user.present? %>
  <% if current_user.id == @review.user_id%>
    <%= link_to "Edit this review", edit_review_path(@review) %> 
    <%= button_to "Destroy this review", @review, method: :delete %>
  <% end %>
<% end %>
  <%= link_to "Back to reviews", reviews_path %>

</div>
